<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.ostmodern.activities.EpisodeViewActivity"
    tools:showIn="@layout/activity_episode_view">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episode_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_default_material_light"
        android:textSize="@dimen/abc_text_size_title_material"
        tools:text="Employees at Robey's Works, Lincoln (1900)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/episode_description"
        android:layout_below="@+id/episode_title"
        android:textColor="@color/primary_text_default_material_light"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        tools:text="A wonderful slug description. Only if there was a description field in the API. Only if ..."/>

</RelativeLayout>
